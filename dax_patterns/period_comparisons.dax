    )

// ------------------------------------------------
// 3. QUARTER-OVER-QUARTER (QoQ) COMPARISONS
// ------------------------------------------------

// Quarter-over-Quarter Growth
QoQ Growth = 
VAR CurrentQuarter = SUM('Sales'[Sales Amount])
VAR PreviousQuarter = 
    CALCULATE(
        SUM('Sales'[Sales Amount]),
        DATEADD('Calendar'[Date], -1, QUARTER)
    )
